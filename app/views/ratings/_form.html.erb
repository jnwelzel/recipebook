<% if current_user %>
  <% @rating = @recipe.rated_by?(current_user) %>
  <% if !@rating.nil? %>
    Your rating: <%= @rating.rate.score %>
  <% else %>
    <%= form_tag(:controller => "ratings", :method => :post, :id => @recipe) do |r| %>
      Your rating: <%= select_tag(:recipe_rating, options_for_select(1..5)) %>
      <%= submit_tag %>
    <% end %>
  <% end %>
  <br/>
<% end %>
Average rating: <%= @recipe.average_rating %>
